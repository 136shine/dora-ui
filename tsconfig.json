{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "rootDirs": ["components"],
    "baseUrl": "components",
    "declaration": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "sourceMap": false,
    "outDir": "./lib",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["es2015", "es2016", "es2017", "dom"]
  },
  "exclude": ["node_modules"]
}
