{
  "name": "@xmly/dora-ui",
  "version": "0.1.0",
  "description": "A React.js Mobile UI Library",
  "repository": "https://github.com/worldzhao/dora-ui",
  "homepage": "https://worldzhao.github.io/dora-ui",
  "license": "MIT",
  "private": false,
  "authors": {
    "name": "zhaozhiwen",
    "email": "zhiwen.zhao@ximalaya.com"
  },
  "files": [
    "lib",
    "es",
    "dist",
    "LICENSE"
  ],
  "main": "lib/index.js",
  "module": "es/index.js",
  "keywords": [
    "dora",
    "dora-ui",
    "react",
    "react-component",
    "component",
    "components",
    "ui",
    "web",
    "framework",
    "frontend",
    "mobile"
  ],
  "tags": [
    "dora",
    "dora-ui",
    "react",
    "react-component",
    "component",
    "components",
    "ui",
    "web",
    "framework",
    "frontend",
    "mobile"
  ],
  "sideEffects": [
    "dist/*",
    "lib/*",
    "es/*",
    "*.less"
  ],
  "scripts": {
    "start": "yarn dev",
    "dev": "docz dev",
    "clean": "rimraf dist lib es",
    "build:doc": "yarn changelog && docz build",
    "deploy:doc": "gh-pages -d site",
    "publish:doc": "yarn build:doc && yarn deploy:doc",
    "build:cjs": "tsc -P tsconfig.json",
    "build:esm": "tsc -P tsconfig.json --module ES6 --outDir es",
    "build:css": "gulp",
    "build": "yarn clean && yarn build:cjs; yarn build:esm && yarn build:css",
    "publish:pkg": "yarn build && yarn publish",
    "commit": "git cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@types/classnames": "^2.2.7",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "babel-eslint": "^10.0.1",
    "commitizen": "^3.1.1",
    "commitlint": "^7.6.1",
    "conventional-changelog": "^3.1.8",
    "conventional-changelog-cli": "^2.0.21",
    "css-loader": "^2.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "docz": "0.13.7",
    "docz-theme-default": "0.13.7",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-react-app": "^4.0.1",
    "eslint-plugin-flowtype": "^3.9.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "gh-pages": "^2.0.1",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^6.1.0",
    "gulp-concat": "^2.6.1",
    "gulp-cssnano": "^2.1.3",
    "gulp-filesize": "^0.0.6",
    "gulp-less": "^4.0.1",
    "gulp-rename": "^1.4.0",
    "gulp-sourcemaps": "^2.6.5",
    "husky": "^2.3.0",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rimraf": "^2.6.3",
    "style-loader": "^0.23.1",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.3.0",
    "typescript": "^3.4.5"
  },
  "peerDependencies": {
    "react": "16.x"
  },
  "lint-staged": {
    "components/**/*.tsx": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "components/**/*.less": [
      "stylelint --syntax less --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "react-icons": "^3.7.0",
    "tslib": "^1.9.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
